<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_aidl">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.peerless2012.service.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_aidl"
            app:destination="@id/nav_aidl" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.peerless2012.service.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.peerless2012.service.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_aidl"
        android:name="com.peerless2012.service.aidl.ui.AIDLFragment"
        android:label="AIDL"
        tools:layout="@layout/fragment_aidl"/>
</navigation>